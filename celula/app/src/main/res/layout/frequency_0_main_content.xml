<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FrequencyPkg.Frequency"
    tools:showIn="@layout/frequency_0_main_activity"
    android:background="@mipmap/ifvlogo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_celula_frequencia"
        android:id="@+id/buttonCellFrequency"
        android:onClick="ButtonCellFrequency"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_culto_frequencia"
        android:id="@+id/buttonServiceFrequency"
        android:layout_alignParentStart="true"
        android:onClick="ButtonServiceFrequency"
        android:layout_below="@+id/buttonCellFrequency"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonCellFrequency"
        android:layout_alignEnd="@+id/buttonCellFrequency" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_report"
        android:id="@+id/button"
        android:onClick="ButtonReport"
        android:layout_below="@+id/buttonServiceFrequency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonServiceFrequency"
        android:layout_alignEnd="@+id/buttonServiceFrequency" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_frequency_edit"
        android:id="@+id/buttonFrequencyEdit"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="ButtonFrequencyEdit" />
</RelativeLayout>
